            ebay_url = get_ebay_link(cleaned_title)
            print(f"\nğŸ›’ eBay Search:")
            print(f"ğŸ”— {ebay_url}")
            
            ebay_data, ebay_image = get_sales_data(ebay_url, cleaned_title)
            
            print("\nğŸ“ˆ Sales Data:")
            print(f"ğŸ“¦ Product: {ebay_data['product']}")
            print(f"ğŸ’° Price: {ebay_data['price']}")
            print(f"ğŸš€ Sales: {ebay_data['sales_rank']}")
            print(f"â­ Rating: {ebay_data['rating']}")
            print(f"ğŸ“… Date: {ebay_data['date']}")
            print(f"ğŸ”— Product Link: {ebay_data['link']}")  # âœ… Show product link
            print(f"\nğŸ–¼ï¸ Product Image: {ebay_image if ebay_image else 'No image found'}")

if __name__ == "__main__":
    main()
